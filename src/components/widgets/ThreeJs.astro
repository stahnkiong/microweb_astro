    if (window.DeviceOrientationEvent) {
      window.addEventListener('deviceorientation', function(event) {
        if (event.alpha !== null || event.beta !== null || event.gamma !== null) {
          const devicecontrolElement = document.getElementById('devicecontrol');
          if (devicecontrolElement) {
            devicecontrolElement.innerHTML = '<svg width="1em" height="1em" viewBox="0 0 32 32" class="w-5 h-5 mr-2" data-icon="carbon:mobile-view-orientation"><path fill="currentColor" d="M28 12h-8v2h8v14h-8v2h8c1.103 0 2-.897 2-2V14c0-1.102-.897-2-2-2"></path><path fill="currentColor" d="m19 16l-1.414 1.414L20.172 20H16c-2.206 0-4-1.794-4-4v-2h-2v2c0 3.309 2.692 6 6 6h4.172l-2.586 2.586L19 26l5-5z"></path><path fill="currentColor" d="M12 28H6V8h16V4c0-1.103-.897-2-2-2H6c-1.103 0-2 .897-2 2v24c0 1.103.897 2 2 2h6zM6 4h14v2H6z"></path>  </svg> View Control: Device Tilt';
          }
        }
      });
    }
  });
</script>
