---
import Layout from '~/layouts/PageLayout.astro';
import ThreeJs from "~/components/widgets/ThreeJs.astro";
import Hero2 from '~/components/widgets/Hero2.astro';
import Banners2 from '~/components/widgets/Banners2.astro';
import WhyUs from '~/components/widgets/WhyUs.astro';
import Features4 from '~/components/widgets/Features4.astro';
import Stats2 from '~/components/widgets/Stats2.astro';
import Banners from '~/components/widgets/Banners.astro';
import Content from '~/components/widgets/Content.astro';
import Banners3 from '~/components/widgets/Banners3.astro';
import PortFolio from '~/components/widgets/PortFolio.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Steps3 from '~/components/widgets/Steps3.astro';
import Features5 from '~/components/widgets/Features5.astro';
const metadata = {
  title: 'Custom Web Development - MicroWeb',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <ThreeJs/>
  <Hero2
  tagline="Custom Web Development"
  actions={[
    { variant: 'primary', text: "Let's Chat", href: '#contact' },
  ]}
  image={{
    src: '~/assets/images/web.webp',
    alt: 'UI UX development multiple devices',
  }}
>
  <Fragment slot="title">
    Attracts, engages and <span class="text-primary text-gradient highlight tracking-tight">Converts</span> visitors into customers
  </Fragment>

  <Fragment slot="subtitle">
    Build a digital experience that engages and retains customers. Our immersive web development draws your audience in, building lasting brand connections
  </Fragment>
  <Fragment slot="content">
    <Features5
        columns={4}
        classes={{ container: 'py-8' }}
        items={[
        {
            description: 'Custom<br/>Development',
            icon: 'carbon:ibm-watsonx-code-assistant',
        },
        {
            description: 'Responsive <br/>Any Device',
            icon: 'carbon:devices',
        },
        {
            description: 'Transparent<br/>Pricing',
            icon: 'carbon:pricing-consumption',
        },
        {
            description: 'Agile<br/>Development',
            icon: 'carbon:chart-radar',
        }
        ]}
        >
    </Features5>
  </Fragment>
  <Fragment slot="bg">
    <div class="absolute inset-0 bg-page"></div>
  </Fragment>
</Hero2>
<Banners2 />

<Features4
id="features"
tagline="Immersive Web Experiences"
columns={3}
title="Artistry + Technology + Intelligent Infrastructure"
subtitle="From initial landing to final conversion, we prioritize user experience to maximize engagement and satisfaction, ensuring a positive brand interaction"
classes={{ container: 'py-20 mt-80 md:mt-0 bg-white/85 md:bg-transparent' }}
items={[
  {
    title: 'User-Centered Design',
    description: "Easy to use, enjoyable to explore. Design with your users in mind",
    icon: 'carbon:customer',
  },
  {
    title: 'Fast Loading, Everywhere',
    description: "330 global CDN<br/>Fast loading for users worldwide",
    icon: 'carbon:earth-filled',
  },
  {
    title: 'Modern User Experience',
    description: "Combining static site generation and dynamic technologies for interactivity",
    icon: 'carbon:image-store-local',
  },
  {
    title: 'Strategic SEO',
    description: "Optimized for best-in-class Core Web Vitals",
    icon: 'carbon:search-locate-mirror',
  },
  {
    title: 'Consistent, Any Device',
    description: "Works seamlessly on all devices and browsers",
    icon: 'carbon:devices',
  },
  {
    title: 'Custom-Built',
    description: "Build specifically for your unique needs",
    icon: 'carbon:ibm-z-cloud-mod-stack',
  },
]}
>
<Fragment slot="bg">
  <div class="absolute inset-0 bg-white/40"></div>
</Fragment>
</Features4>

<Steps3
    title="Phased Web Development"
    subtitle="Collaborate with us from prototype to launch, paying in phases and ensuring you're completely satisfied with the final design. We offer design flexibility, not rigid templates"
    items={[
      {
        title: 'Stage 1: <span class="font-medium">Discovery & Planning</span>',
        description:
          "We talk with you to understand what you need. We figure out what your website should do and who will use it. We also set a timeline and budget",
        icon: 'carbon:forum',
      },
      {
        title: 'Stage 2: <span class="font-medium">Design & Prototyping</span>',
        description:
          "We create simple drawings to show how your website will be organized. Then, we create designs & mockups to show how it will look",
        icon: 'carbon:devices',
      },
      {
        title: 'Stage 3: <span class="font-medium">Development & Implementation</span>',
        description:
          'Our developers build your website using the latest technology. We make sure everything works correctly and is secure',
        icon: 'carbon:ibm-watsonx-code-assistant',
      },
      {
        title: 'Stage 4: <span class="font-medium">Testing & Quality Assurance</span>',
        description: 'We test your website on different devices (phones, tablets, computers) and browsers to make sure it works well for everyone',
        icon: 'carbon:cloud-data-ops',
      },
      {
        title: 'Stage 5: <span class="font-medium">Deployment & Launch</span>',
        description: 'We put your website online and help you get started. We also give you training and instruction',
        icon: 'carbon:cloud-monitoring',
      },
      {
        title: 'Stage 6: <span class="font-medium">Maintenance & Support</span>',
        description: 'We keep your website safe, up-to-date, and running smoothly. We also help you if you have any questions or problems',
        icon: 'carbon:cloud-monitoring',
      },
    ]}
  >
  <Fragment slot="bg">
    <div class="absolute inset-0 backdrop-blur-lg bg-black/70 dark:bg-black/30"></div>
  </Fragment>
  </Steps3>

<WhyUs/>

  <!-- Stats Widget ****************** -->

  <Stats2
    stats={[
      { title: 'Content Delivery Network Worldwide', amount: '330+', },
      { title: 'High Availability Uptime', amount: '99.99%' },
      { title: 'Malicious Traffic Automatic Mitigation', amount: '< 3s' },
    ]}
  />

  <Banners/>
  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Growing Together"
    title="Partner with Us to Digitalize<br/> Your Business"
    subtitle="We donâ€™t just work with clients; we build long-lasting relationships where we both thrive"
    items={[
      {
        title: 'Proven Expertise',
        icon: 'carbon:badge',
        description:
          'With over a decade of experience, our team has delivered successful projects across a range of industries, helping businesses achieve their goals',
      },
      {
        title: 'Collaborative Partnerships',
        icon: 'carbon:events',
        description:
          "We've built strong partnerships in AI, IoT, hardware, event management and HR, delivering innovative and comprehensive business solutions",
      },      
      {
        title: 'Build on Modern Foundations',
        icon: 'carbon:layers-external',
        description:
          "Gain a competitive advantage by incorporating industry leading practices ",
      },
      {
        title: 'Cutting-Edge Technology',
        icon: 'carbon:carbon-for-ibm-product',
        description:
          'We stay at the forefront of technology, using the latest tools and innovations',
      },
      {
        callToAction: {
          text: "Let's Chat",
          variant: 'primary',
          href: '#contact',
          icon: 'tabler:chevron-right',
        },
      },
    ]}
    image={{
      src: '~/assets/images/coding.jpg',
      alt: 'Colorful Image',
    }}
  >

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-page"></div>
    </Fragment>
  </Content>

  <Banners3/>
  <!-- Content Widget **************** -->

  <PortFolio
    id="porfolio"
    title="Our Clients and Us"
    tagline="Portfolio"
    classes={{panel:'bg-blue-950 text-white', container:'pb-4 pt-12 md:pb-4 md:pt-16 lg:pb-4 lg:pt-20'}}
    items={[
      {
        title: 'Delivering Excellence Under Guidelines',
        icon: 'carbon:application-web',
        description:
          'Ford had a very specific vision for the website, with strict guidelines on design aesthetics, font usage (yes, that iconic Ford font!) and overall user experience.',
      },
    ]}
    image={{
      src: '~/assets/images/ford_raptor.webp',
      alt: 'ford raptor',
    }}
    callToAction={{
      target: '_blank',
      text: 'Read case study',
      icon: 'tabler:chevron-right',
      href: '#',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-2xl mb-2">
        Applying Ford's Design Standards <br /><span class="text-lg font-semibold">Meeting UI/UX Development Standards in Local Retails</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-page"></div>
    </Fragment>
  </PortFolio>

  <PortFolio
  isReversed
  isAfterContent
  classes={{panel:'bg-amber-300 dark:bg-fuchsia-950', container:'py-4 md:py-4 lg:py-4'}}
  items={[
    {
      title: 'Streamlining the Customer Journey: AI-Driven Approach',
      icon: 'carbon:application-web',
      description:
        "Boosted sales by targeting the right customers at the right time. We optimized Google Ads campaign by leveraging AI for precise audience targeting, strategic scheduling, and dynamic bidding.",
    },
  ]}
  image={{
    src: '~/assets/images/bosoffice_chair.webp',
    alt: 'Bos Office Chair',
  }}
  callToAction={{
    target: '_blank',
    text: 'Read case study',
    icon: 'tabler:chevron-right',
    href: '#',
  }}
>
  <Fragment slot="content">
    <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-2xl mb-2">
      Bos Office System <br /><span class="text-lg font-semibold">Leveraging AI-Powered Marketing</span>
    </h3>
  </Fragment>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-page"></div>
  </Fragment>
</PortFolio>

<PortFolio
  isAfterContent
  classes={{panel:'bg-[#e1e1e1] dark:bg-slate-700', container:'py-4 md:py-4 lg:py-4'}}
  items={[
    {
      title: 'More Reliable and Privacy-Conscious Approach',
      icon: 'carbon:application-web',
      description:
        'Recognizing the limitations of QR codes, reliance on user scanning, limited data accuracy, and the impracticality of widespread GPS tracking - we opted for more robust solution.',
    },
  ]}
  image={{
    src: '~/assets/images/wristband2.webp',
    alt: 'ford raptor',
  }}
  callToAction={{
    target: '_blank',
    text: 'Read case study',
    icon: 'tabler:chevron-right',
    href: '#',
  }}
>
  <Fragment slot="content">
    <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-2xl mb-2">
      COVID-19 and Border Authorities <br /><span class="text-lg font-semibold">The Shift from QR Codes to Bluetooth Beacons</span>
    </h3>
  </Fragment>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-page"></div>
  </Fragment>
</PortFolio>


  <CallToAction
  classes={{container:'pt-0 md:pt-0 lg:pt-0'}}
    actions={[
      {
        variant: 'secondary',
        text: 'See more case studies',
        href: 'blog.microweb.my',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-page"></div>
    </Fragment>
  </CallToAction>


  

</Layout>