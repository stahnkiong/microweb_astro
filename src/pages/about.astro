---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero3 from '~/components/widgets/Hero3.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Steps3 from '~/components/widgets/Steps3.astro';
import Layout from '~/layouts/PageLayout.astro';
import Banners2 from '~/components/widgets/Banners2.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero3
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Solving Real-World Problems with <br />
      <span class="text-accent dark:text-white highlight"> Software Solutions</span>
    </Fragment>

    <Fragment slot="subtitle">
      MicroWeb's team of experts turns your business ideas into effective software.
      We're a leading digital transformation partner, helping businesses succeed in the digital world.
      We create great online experiences that connect with your customers and deliver real results. 
      Using top-notch technology, including AI, we provide complete solutions designed to boost your brand and make a big impact.
    </Fragment>
  </Hero3>
  <Banners2 isBgBlack="true"/>
  <!-- Stats Widget ****************** -->

  <!-- <Stats
    title="Statistics about us"
    stats={[
      { title: 'Offices', amount: '4' },
      { title: 'Employees', amount: '248' },
      { title: 'Templates', amount: '12' },
      { title: 'Awards', amount: '24' },
    ]}
  /> -->

  <!-- Features3 Widget ************** -->

  <Features3
    title="Core Value: People First"
    subtitle="MicroWeb builds strong, lasting relationships with our clients. We work closely with successful brands, startups, and other developers to create outstanding solutions together."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Relationship-Focused',
        description:
          'MicroWeb prioritizes building long-term, mutually beneficial relationships with clients, not just transactional work',
        icon: 'tabler:template',
      },
      {
        title: 'Collaborative Approach',
        description:
          'Work closely with a diverse range of partners, including established brands, emerging startups, and fellow developers, fostering a team-oriented environment',
        icon: 'tabler:template',
      },
      {
        title: 'Specialized Efficiency',
        description:
          'Our team is divided into experts. Each team focuses on one area of the software, making them very efficient and delivering excellent results',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Colorful Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our values"
    subtitle="So, at the end of the day, it's about the people. We've built a company culture where everyone's working together, always trying new things, and constantly getting better. Even the best teams have their ups and downs, disagreements or setbacks along the way but hey that's where the real magic happens. We learn from our mistakes, bounce ideas off each other, and come up with some really cool stuff."

    items={[
      {
        title: 'Top Talent for Every Project',
        description:
          'We hire the best developers and match them to your project. This ensures you get experts who understand your vision and deliver the right solution',
      },
      {
        title: 'Scalable, Flexible Teams',
        description:
          'Our developer network is highly adaptable, allowing us to scale teams based on project requirements',
      },
      {
        title: 'Progressive Project Management',
        description:
          'Our progressive project management approach ensures that your project stays on track and delivers exceptional results',
      },
    ]}
  />

  <Steps3
    title="Our Journey"
    subtitle='Lifelong Learning and Continuous Improvement'
    items={[
      {
        title: '2012',
        description:
          " Started building websites to help local businesses grow online ",
        icon: 'carbon:forum',
      },
      {
        title: '2014',
        description:
          " Began building online stores for larger companies ",
        icon: 'carbon:devices',
      },
      {
        title: '2015',
        description:
          " Added digital marketing (SEO and Google Ads) to help clients get more customers ",
        icon: 'carbon:devices',
      },
      {
        title: '2016',
        description:
          " Started building mobile apps for iPhones and Android phones ",
        icon: 'carbon:devices',
      },
      {
        title: '2017',
        description:
          " Began creating custom software and web apps to improve business operations ",
        icon: 'carbon:devices',
      },
      {
        title: '2020',
        description:
          " Completed our first government project, helping with COVID-19 management ",
        icon: 'carbon:devices',
      },
      {
        title: '2021',
        description:
          " Started working with IoT hardware to offer complete digital solutions ",
        icon: 'carbon:devices',
      },
      {
        title: '2022',
        description:
          " Began using microservices to make digital transformations smoother ",
        icon: 'carbon:devices',
      },
      {
        title: '2025',
        description:
          " Will be exporting Sarawak digital workforce to the globe ",
        icon: 'carbon:devices',
      },
    ]}
  >
  <Fragment slot="bg">
    <div class="absolute inset-0 backdrop-blur-lg bg-black/70 dark:bg-black/30"></div>
  </Fragment>
  </Steps3>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our locations"
    tagline="Find us"
    columns={2}
    items={[
      {
        title: 'Kuching',
        description: '1234 Lorem Ipsum St, 12345, Miami',
      },
      {
        title: 'KL',
        description: '5678 Lorem Ipsum St, 56789, Madrid',
      },
    ]}
  />


</Layout>
