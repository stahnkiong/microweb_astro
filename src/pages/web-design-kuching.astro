---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Banners2 from '~/components/widgets/Banners2.astro';
import Features4 from '~/components/widgets/Features4.astro';
import Steps3 from '~/components/widgets/Steps3.astro';
import Features5 from '~/components/widgets/Features5.astro';
import FollowUp from '~/components/widgets/FollowUp.astro';
const metadata = {
  title: "Web Design Kuching is a Must | Trusted by 200+ SMEs Since 2012",
  description: "Kuching's top web design agency crafting responsive, ultra-fast websites with SEO. Packages from RM2,000. 12+ years local expertise."
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Professional Web Design Services"
    actions={[
      { variant: 'primary', text: "Get Free Quote", href: '#contact' },
      { variant: 'secondary', text: "WhatsApp Now", href: 'https://wa.me/6168880650' }
    ]}
    image={{
      src: '~/assets/images/web_design_development_kuching.webp',
      alt: 'responsive website design across multiple devices',
    }}
  >
    <Fragment slot="title">
      Web Design Kuching: <span class="text-primary text-gradient highlight tracking-tight">Trusted by 200+ SMEs</span> Since 2012
    </Fragment>

    <Fragment slot="subtitle">
      Build mobile-friendly, SEO-optimized websites that load in seconds. 
      <div class="mt-4 flex gap-4 flex-wrap mb-4">
        <span class="badge badge-lg">‚úÖ 12+ Years Experience</span>
        <span class="badge badge-lg">‚ö° 95/100 PageSpeed</span>
        <span class="badge badge-lg">üèÜ 99% Satisfaction</span>
      </div>
    </Fragment>

    <Fragment slot="content">
      <Features5
        columns={4}
        classes={{ container: 'py-8' }}
        items={[
          {
            description: 'Responsive<br/>Design',
            icon: 'carbon:devices',
          },
          {
            description: 'SEO<br/>Optimized',
            icon: 'carbon:search-locate-mirror',
          },
          {
            description: 'Lightning<br/>Fast',
            icon: 'carbon:rocket',
          },
          {
            description: 'From RM2,000',
            icon: 'carbon:pricing-consumption',
          }
        ]}
      />
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute bg-page inset-0 grid grid-cols-2 -space-x-52 opacity-80 md:opacity-85">
        <div class="blur-[106px] h-64 bg-gradient-to-br from-violet-300 to-purple-500 md:to-purple-300 dark:from-blue-700"></div>
        <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-300 to-sky-200 dark:to-indigo-600"></div>
      </div>
    </Fragment>
  </Hero2>
<Banners2 />

<Features4
    id="why-us"
    tagline="Why Kuching Chooses Us"
    columns={3}
    title="Sarawak's Complete Web Solution"
    subtitle="Combining technical excellence with deep local market understanding"
    classes={{ container: 'py-20 bg-white/80 dark:bg-black/80' }}
    items={[
      {
        title: 'Mobile-First Design',
        description: "Perfect for Kuching's 65%+ mobile users",
        icon: 'carbon:devices',
      },
      {
        title: 'Local SEO Mastery',
        description: "Rank #1 for 'Kuching' keywords",
        icon: 'carbon:location-filled',
      },
      {
        title: 'Ultra-Fast Performance',
        description: "<2s load times with CDN in Sarawak",
        icon: 'carbon:forecast-lightning',
      },
      {
        title: 'Transparent Pricing',
        description: "Packages from RM2,000",
        icon: 'carbon:wallet',
      },
      {
        title: 'Secure & Reliable',
        description: "99.99% uptime guarantee",
        icon: 'carbon:security',
      },
      {
        title: 'Ongoing Support',
        description: "Local maintenance team",
        icon: 'carbon:user',
      },
    ]}
  />

<Steps3
    image={{
      src: '~/assets/images/webdev.webp',
      alt: 'team working on website design',
    }}
    title="Our Kuching-Tested Process"
    subtitle="Proven 6-stage framework refined over 12 years serving Sarawak businesses"
    items={[
      {
        title: '1. Discovery Session',
        description: "Understand your business goals at our Kuching office",
        icon: 'carbon:forum',
      },
      {
        title: '2. Design Mockups',
        description: "Get 3 concept designs tailored for Kuching market",
        icon: 'carbon:image-copy',
      },
      {
        title: '3. Development',
        description: "Build with Vue.js/Astro for maximum speed",
        icon: 'carbon:code',
      },
      {
        title: '4. Local SEO Setup',
        description: "Optimize for Kuching search terms",
        icon: 'carbon:search',
      },
      {
        title: '5. Quality Testing',
        description: "Cross-device testing on local networks",
        icon: 'carbon:test-tool',
      },
      {
        title: '6. Launch & Support',
        description: "Go live with 24/7 Kuching-based support",
        icon: 'carbon:launch',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 backdrop-blur-lg bg-black/70 dark:bg-black/30"></div>
    </Fragment>
  </Steps3>

  <FollowUp />
  
</Layout>